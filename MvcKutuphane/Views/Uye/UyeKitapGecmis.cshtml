@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye:@ViewBag.uye1</h2>
<title>Kütüphane Yönetim Sistemi</title>
<div>
    <a href="/Uye/Index" class="btn btn-danger">Geri</a>
</div>
<br />
<table class="table table-striped">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Getirilen Tarih</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.TBLKITAP.AD</td>
            <td>@x.PERSONEL</td>
            <td>@Convert.ToDateTime(@x.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(@x.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
        </tr>

    }


</table>