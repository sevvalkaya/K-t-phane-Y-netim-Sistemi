@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-striped">
    <tr style="background-color:#818181">
        <th style="color:white">Kategori</th>
        <th style="color:white">Tarih</th>
        <th style="color:white">içerik</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.KATEGORI</td>
            <td>@Convert.ToDateTime(prs.TARIH).ToString("dd/MM/yyyy")</td>
            <td>@prs.ICERIK</td>
        </tr>
    }
</table>